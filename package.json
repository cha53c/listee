{
  "name": "listee",
  "version": "1.0.0",
  "description": "list management tool",
  "main": "app.js",
  "scripts": {
    "start": "DEBUG=app,app:* nodemon app.js",
    "stop": "ps -e  | grep listeeApp | grep -v grep | awk '{print $1}' | xargs kill -15; ps -e  | grep node | grep -v grep | awk '{print $1}' | xargs kill -15",
    "express-routes-list": "express-routes-list",
    "test": "mocha './test/**'",
    "tests-with-debug": "DEBUG=app,app:*  mocha; jasmine",
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cha53c/listee.git"
  },
  "author": "chasec",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cha53c/listee/issues"
  },
  "homepage": "https://github.com/cha53c/listee#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "debug": "^4.1.1",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "cheerio": "1.0.0-rc.3",
    "coveralls": "3.1.0",
    "istanbul": "0.4.5",
    "mocha": "7.1.1",
    "mocha-lcov-reporter": "1.3.0",
    "newman": "5.0.0",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": "node_modules/**/node_modules",
    "delay": "3000"
  }
}
