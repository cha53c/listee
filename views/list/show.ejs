<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        .hide {
            display: none;
        }
    </style>
</head>
<body>
<h1>List name: <%= listId %></h1>
<button onclick="edit()" class="update-page">edit</button>
<button onclick="save()" class="update-page hide">save</button>
<h2>Items </h2>
<% for (const item of items) { %>
    <p><%= item %></p>
<% } %>
<script>
    function edit() {
        toggle_edit_save();
    }

    function save() {
        toggle_edit_save();
    }
</script>
<script>
    function toggle_edit_save() {
        const elements = document.getElementsByClassName('update-page');
        for (const el of elements) {
            el.classList.toggle('hide');
        }
    }
</script>
</body>
</html>